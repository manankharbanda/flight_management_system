@model FlightManagementSystem.Models.AddFlights
@{
    ViewBag.Title = "Add Flights";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Date)
                @Html.TextBoxFor(m => m.Date)
            </li>
            <li>
                @Html.LabelFor(m => m.Time)
                @Html.TextBoxFor(m => m.Time)
            </li>
            <li>
                @Html.LabelFor(m => m.SeatsAvailable)
                @Html.TextBoxFor(m => m.SeatsAvailable)
            </li>
            <li>
                @Html.LabelFor(m => m.RunwayId)
                @Html.TextBoxFor(m => m.RunwayId)
            </li>
            <li>
                @Html.LabelFor(m => m.Gate)
                @Html.TextBoxFor(m => m.Gate)
            </li>
            <li>
                @Html.LabelFor(m => m.PlaneID)
                @Html.TextBoxFor(m => m.PlaneID)
            </li>
            <li>
                @Html.LabelFor(m => m.DestinationId)
                @Html.TextBoxFor(m => m.DestinationId)
            </li>
            <li>
                @Html.LabelFor(m => m.OriginId)
                @Html.TextBoxFor(m => m.OriginId)
            </li>
        </ol>
        <input type="submit" value="Add" onclick="myFunction()"/>
    </fieldset>
}
<script>
    function myFunction() {
        alert("Flight Added Successfully")
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
